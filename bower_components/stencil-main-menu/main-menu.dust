<div class="c-main-menu pinny__wrapper {class}" role="document" hidden>
    <div class="pinny__header">
        {?header}
            {header}
        {:else}
            {@c-input-inline-btn type="search" placeholder="Searchâ€¦" buttonText="Go" /}
        {/header}
    </div>

    <div class="pinny__content pinny--is-scrollable">
        {?body}
            {body}
        {:else}
            {@c-main-menu__level items=items /}
        {/body}
    </div>

    <div class="pinny__footer">
        {?footer}
            {footer}
        {:else}
            <strong>default footer</strong>
        {/footer}
    </div>
</div>

<script>
    (function(require) {
        require(['stencil-main-menu'], function(mainMenu) {
            mainMenu.init();
        });
    })(Adaptive.AMD.require);
</script>
